<main class="lista-candidatos">
    <h2>Listado de Candidatos</h2>
    {{#if candidates.length}}
    {{#each candidates}}
    <div class="candidatos">
        <div class="caja">
            <p class="etiqueta">Nombre:</p>
            <p class="nombre">{{name}}</p>
        </div>
        <div class="caja">
            <p class="etiqueta">E-Mail:</p>
            <p class="nombre">{{email}}</p>
        </div>
        <div class="caja">
            <a href="/uploads/cv/{{cv}}" class="btn btn-verde">Ver CV</a>
        </div>
    </div>
    {{/each}}
    {{else}}
    <p>No hay Candidatos</p>
    {{/if}}
</main>